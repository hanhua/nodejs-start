{
    "compilerOptions": {
        //target
        "target": "ES2019",
        "sourceMap": true,
        // module
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        // interop
        "esModuleInterop": true,
        // Decorators
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // Others
        "removeComments": true,
        "declaration": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "outDir": "../dist/server",
        "lib": ["ES2019"],
        "types": ["node"],
        "incremental": true,
        "composite": true
    },
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"]
}
